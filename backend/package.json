{
    "name": "backend",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig-build.json",
        "start": "node dist/src/server.js",
        "dev": "ts-node-dev --transpileOnly --no-notify --ignore-watch node_modules src/server.ts",
        "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
        "test": "cross-env NODE_ENV=test jest --no-cache --runInBand --detectOpenHandles",
        "knex:seed": "knex --knexfile knexfile.ts seed:run",
        "knex:migrate-latest": "knex --knexfile knexfile.ts migrate:latest",
        "knex:migrate-rollback": "knex --knexfile knexfile.ts migrate:rollback"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn test"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "license": "MIT",
    "dependencies": {
        "celebrate": "^14.0.0",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^9.0.2",
        "express": "^4.17.1",
        "knex": "^0.95.5",
        "multer": "^1.4.2",
        "pg": "^8.6.0",
        "sqlite3": "^5.0.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.10",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.11",
        "@types/faker": "^5.5.5",
        "@types/hapi__joi": "^17.1.6",
        "@types/jest": "^26.0.23",
        "@types/multer": "^1.4.5",
        "@types/supertest": "^2.0.9",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "faker": "^5.5.3",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.0",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.6",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.6",
        "typescript": "^4.2.4"
    }
}
